@model ELearning.Model.CourseViewModel
<section id="content">
    <div class="container">
        <div class="col-lg-12 mx-auto">
            @*<hr class="star-dark mb-5">*@
            <div class="col-lg-8">
                <h3>Lesson</h3>
                @if (ViewBag.success != null)
                {
                    <div class="alert alert-success">@ViewBag.success</div>
                }
                @if (ViewBag.error != null)
                {
                    <div class="alert alert-danger">@ViewBag.error</div>
                }
                <form method="post" enctype="multipart/form-data" action="@Url.Action("Test", "SuperAdmin")">
                    <table class="table table-bordered">
                        <tr>
                            <td>
                                <div class="control-group">
                                    <div class="form-group controls mb-0 pb-2">
                                        <label>Select Module</label>
                                        <select name="moduleid" class="form-control">
                                            <option>Select Module</option>
                                            @if (Model.ModuleList != null)
                                            {
                                                foreach (var item in Model.ModuleList)
                                                {
                                                    <option value="@item.ModuleId">@item.Name</option>
                                                }
                                            }

                                        </select>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="control-group">
                                    <div class="form-group controls mb-0 pb-2">
                                        <label>Select Option</label>
                                        <input class="form-control" name="question" type="text" placeholder="Question"> 
                                        
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="control-group">
                                    <div class="form-group controls mb-0 pb-2">
                                        <label>Select Option</label>
                                        <input class="form-control" name="optiona" type="text" placeholder="Option A" value=""><br />
                                        <input class="form-control" name="optionb" type="text" placeholder="Option B" value=""><br />
                                        <input class="form-control" name="optionc" type="text" placeholder="Option C" value=""><br />
                                        <input class="form-control" name="optiond" type="text" placeholder="Option D" value=""><br />
                                    </div>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <div class="control-group">
                                    <div class="form-group controls mb-0 pb-2">
                                        <label>Select Right Option</label>
                                        <select name="answer" class="form-control">
                                            <option value="">Select Option</option>
                                            <option value="a">a</option>
                                            <option value="b">b</option>
                                            <option value="c">c</option>
                                            <option value="d">d</option>
                                            <option value="e">e</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                        </select>
                                    </div>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <div class="control-group">
                                    <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                        <label>Upload Video</label>
                                        <input class="form-control" name="file" type="file" placeholder="Upload image" />
                                        <p class="help-block text-danger"></p>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-xl" id="btnlesson">Save</button>
                                </div>
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
        
        <div class="col-lg-4">
            <a href="@Url.Action("TestList","SuperAdmin")">View List</a>
        </div>
        </div>
    </div>
</section>