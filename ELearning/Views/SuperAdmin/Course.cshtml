@model ELearning.Model.CourseViewModel
<section id="content">
    <div class="container">
        <br /><br />
        <div class="col-lg-12 mx-auto">
            @if (ViewBag.success != null)
            {
                <div class="alert alert-success">@ViewBag.success</div>
            }
            @if (ViewBag.failure != null)
            {
                <div class="alert alert-danger">@ViewBag.failure</div>
            }
        </div>
        <div class="row">
            <div class="col-lg-6">
                <h3>Course</h3>
                <form enctype="multipart/form-data" method="post" action="@Url.Action("Course", "SuperAdmin")">
                    <table class="table table-bordered">
                        <tr>
                            <td>
                                <div class="control-group">
                                    <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                        <label>Enter Course</label>
                                        <input class="form-control" name="cname" id="course" type="text" placeholder="Course Name" required="required" data-validation-required-message="Please enter your course name.">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="control-group">
                                    <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                        <label>Upload Image</label>
                                        <input class="form-control" name="file" id="course" type="file" placeholder="upload image" required="required" data-validation-required-message="Please select image of the course">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-xl" id="btncourse">Save</button>
                                </div>
                            </td>
                        </tr>
                    </table>
                </form>
            </div>

            
        </div>
        <hr class="star-dark mb-5">

    </div>
</section>