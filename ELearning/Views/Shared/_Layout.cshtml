<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ELearning</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="~/vendor/magnific-popup/magnific-popup.css" rel="stylesheet" type="text/css">
    <link href="~/css/freelancer.css" rel="stylesheet">
    <link href="~/css/loder.css" rel="stylesheet">

</head>
<body>
    @using Microsoft.AspNetCore.Http
    @using ELearning.helper
    @using ELearning.Model
    @using System.Security.Claims;
    @using Microsoft.AspNetCore.Mvc;

    @inject IHttpContextAccessor HttpContextAccessor

    @{
        var user = HttpContextAccessor.HttpContext.User;
        var identity = (ClaimsIdentity)user.Identity;

        var name = identity.Claims.Where(c => c.Type == "role")
                           .Select(c => c.Value).SingleOrDefault();
        var auth = user.Identity.IsAuthenticated;
    }

    <nav class="navbar navbar-expand-lg bg-secondary fixed-top text-uppercase" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="#page-top"> <span class="fa fa-leaf"></span><i class="text-lowercase">e</i>Learn Master</a>
            <button class="navbar-toggler navbar-toggler-right text-uppercase bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fa fa-bars"></i>
            </button>

            @if (!auth)
            {
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#about">
                                About
                            </a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#contact">
                                <i class="fa fa-contao" style="font-size:16px;"></i>
                                Contact
                            </a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#register">
                                Register
                            </a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#login">
                                <i class="fa fa-sign-in" style="font-size:16px;"></i>
                                Login
                            </a>
                        </li>
                    </ul>
                </div>
            }
            @if (auth && name == "1")
            {
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#l_dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" id="l_institute" href="#inst">Institute</a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" id="l_course" href="#content">Content Configuration</a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#student">Student Information</a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" id="l_test" href="#course">Course Test</a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" id="l_admin" href="#adminuser">Admin User</a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="@Url.Action("Logout","Home")">Logout</a>
                        </li>
                    </ul>
                </div>
            }

            @if (auth && name == "2")
            {
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" id="l_idashboard" href="#dashboard">
                                <i class="fa fa-dashboard" style="font-size:16px;"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" id="l_student" href="#student">Student</a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" id="l_activation" href="#activation">Activation Code</a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" id="l_userprofile" href="#userprofile">
                                <i class="fa fa-user" style="font-size:16px;"></i>
                            </a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="@Url.Action("Logout","Home")">
                                <i class="fa fa-sign-out" style="font-size:16px;"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            }

            @if (auth && name == "3")
            {
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" id="l_sdashboard" href="#sdashboard">
                                <i class="fa fa-dashboard" style="font-size:16px;"></i> Dashboard
                            </a>

                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" id="ls_userprofile" href="#userprofile">
                                <i class="fa fa-user" style="font-size:16px;"></i>
                            </a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="@Url.Action("Logout","Home")">
                                <i class="fa fa-sign-out" style="font-size:16px;"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            }

        </div>

    </nav>
    @if (!auth)
    {
        <section id="about">
            <header class="masthead bg-primary text-white text-center">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8">
                            <img class="img-fluid d-block mx-auto" src="~/images/msoffice.png" alt="*"/>
                            @*<h3 class="text-uppercase mb-0">Welcome to <span class="fa fa-leaf"></span><i class="text-lowercase">e</i>Learn Master</h3>
                            <hr class="star-light">
                            <h2 class="font-weight-light mb-0">Come join us the world of learning</h2>*@
                        </div>
                        <div class="col-lg-4">
                            <h4 class="text-uppercase mb-0">Welcome to <span class="fa fa-leaf"></span><i class="text-lowercase">e</i>Learn Master</h4>
                            <hr class="star-light">
                            <h5>About us</h5>
                            <h6>
                                Online platform to learn computer basics through video which is not available in public domain,
                                learn and evaluate through assessment test to know your knowledge on the topics.
                            </h6>
                        </div>
                    </div>

                </div>
            </header>
        </section>
    }
    @*<partial name="_CookieConsentPartial" />*@

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer text-center">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 mb-5 mb-lg-0">
                        <h4 class="text-uppercase mb-4">Location</h4>
                        <p class="lead mb-0">
                            Indore
                            <br>452009
                        </p>
                    </div>
                    <div class="col-md-4 mb-5 mb-lg-0">
                        <h4 class="text-uppercase mb-4">Around the Web</h4>
                        <ul class="list-inline mb-0">
                            <li class="list-inline-item">
                                <a class="btn btn-outline-light btn-social text-center rounded-circle" href="#">
                                    <i class="fa fa-fw fa-facebook"></i>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a class="btn btn-outline-light btn-social text-center rounded-circle" href="#">
                                    <i class="fa fa-fw fa-google-plus"></i>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a class="btn btn-outline-light btn-social text-center rounded-circle" href="#">
                                    <i class="fa fa-fw fa-twitter"></i>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a class="btn btn-outline-light btn-social text-center rounded-circle" href="#">
                                    <i class="fa fa-fw fa-linkedin"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h4 class="text-uppercase mb-4"><i class="fa fa-leaf"></i><i class="text-lowercase">e</i>LEARN MASTER</h4>
                        <p class="lead mb-0">

                        </p>
                    </div>
                </div>
            </div>
        </footer>
        @*<div class="copyright py-4 text-center text-white">
                <div class="container">
                    <small>Copyright &copy; Your Website 2018</small>
                </div>
            </div>*@
        <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
        <div class="scroll-to-top d-lg-none position-fixed ">
            <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top">
                <i class="fa fa-chevron-up"></i>
            </a>
        </div>
    </div>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>
    <script src="~/js/jqBootstrapValidation.min.js"></script>
    <script src="~/js/contact_me.js"></script>
    <script src="~/js/freelancer.min.js"></script>


    <script>
            $(document).ready(function () {
                $(document).bind("contextmenu", function (e) {
                    return false;
                });
                function disableF5(e) { if ((e.which || e.keyCode) == 116) e.preventDefault(); };

                $('#l_course').click(function () {
                    window.location.href='@Url.Action("Course", "SuperAdmin")';
                });
                $('#l_institute').click(function () {
                    window.location.href='@Url.Action("Institute", "SuperAdmin")';
                });

                $('#l_admin').click(function () {
                    window.location.href='@Url.Action("AdminUser", "SuperAdmin")';
                });

                $('#l_training').click(function () {
                    window.location.href='@Url.Action("Training", "Student")';
                });

                $('#l_sdashboard').click(function () {
                    window.location.href='@Url.Action("Index", "Student")';
                });
                $('#l_idashboard').click(function () {
                    window.location.href='@Url.Action("Index", "Institute")';
                });

                $('#l_activation').click(function () {
                    window.location.href='@Url.Action("ActivationCode", "Institute")';
                });

                $('#l_test').click(function () {
                    window.location.href='@Url.Action("Test", "SuperAdmin")';
                });

                $('#l_assessment').click(function () {
                    window.location.href='@Url.Action("UserTest", "Student")';
                });

                $('#l_student').click(function () {
                    window.location.href='@Url.Action("StudentRecords", "Institute")';
                });

                $('#l_userprofile').click(function () {
                    window.location.href='@Url.Action("UserProfile","Institute")';
                });

                 $('#ls_userprofile').click(function () {
                    window.location.href='@Url.Action("UserProfile", "Student")';
                });

            });
    </script>


    @RenderSection("Scripts", required: false)
</body>
</html>
